#############################################
# Telegram bot
#############################################
BOT_TOKEN=1234567890:XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX


#############################################
# Redis
#############################################
# Вариант A (рекомендуется): отдельные параметры
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_USER=
REDIS_PASSWORD=mypassword

# Вариант B: одной строкой (если задан — имеет приоритет)
# Пример без пользователя: redis://:mypassword@redis:6379/0
# Пример с пользователем:  redis://user:mypassword@redis:6379/0
# В Docker обычно оставляют пустым и используют REDIS_HOST/PORT/DB выше.
REDIS_URL=


#############################################
# MySQL
#############################################
# Вариант A: одной строкой
# Пример: mysql+aiomysql://user:password@mysql:3306/bot_db
MYSQL_URL=

# Вариант B: отдельные параметры (используются, если MYSQL_URL пустой)
MYSQL_USER=user
MYSQL_PASSWORD=password
MYSQL_HOST=mysql
MYSQL_DATABASE=bot_db

# Доп параметры
# Размер пула соединений
DB_POOL_SIZE=5
# Максимальное количество дополнительных соединений
DB_MAX_OVERFLOW=10
# Таймаут ожидания соединения (секунды)
DB_POOL_TIMEOUT=30


#############################################
# Logging
#############################################
# DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_LEVEL=INFO